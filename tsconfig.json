{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"noUnusedLocals": true,
		"outDir": "./out",
		"lib": [
			"es6"
		],
		"typeRoots": [
			"node_modules/@types/*",
			"*"
		],
		"sourceMap": true,
		"rootDir": ".",
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"gulpfile.ts",
		"sample/*"
	]
}